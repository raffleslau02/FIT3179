  },
  "mark": {"type": "point", "size": 10, "shape": "M0,.5L.6,.8L.5,.1L1,-.3L.3,-.4L0,-1L-.3,-.4L-1,-.3L-.5,.1L-.6,.8L0,.5Z"},
  "encoding": {
    "latitude": {"field": "latitude", "type": "quantitative"},
    "longitude": {"field": "longitude", "type": "quantitative"}
  }
},
{
